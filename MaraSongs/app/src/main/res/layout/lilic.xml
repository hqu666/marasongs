<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/black_pere"
	android:orientation="vertical"
	android:textAlignment="center">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#00FFFFFF"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/to_img_bt"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:backgroundTint="#00FFFFFF"
			android:contentDescription="art"
			android:rotation="90"
			app:srcCompat="@android:drawable/arrow_down_float" />

		<TextView
			android:id="@+id/font_mini"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="12" />

		<SeekBar
			android:id="@+id/font_size_sp"
			style="@style/Widget.AppCompat.SeekBar.Discrete"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:max="10"
			android:progress="3" />

		<TextView
			android:id="@+id/current_font_size"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="24" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" / " />

		<TextView
			android:id="@+id/font_max"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="60" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="SP" />

	</LinearLayout>


	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/lyric_sv"
		>
		<TextView
			android:id="@+id/lyric_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="2px"
			android:autoSizeMaxTextSize="36sp"
			android:autoSizeMinTextSize="12sp"
			android:autoSizeStepGranularity="2sp"
			android:singleLine="false" />
<!--			android:scrollbars="vertical"-->
			<!--	android:textSize="14sp"-->
			<!--	android:maxLines="18"-->
			<!--	android:autoSizeTextType="uniform"-->
	</ScrollView>

</LinearLayout>